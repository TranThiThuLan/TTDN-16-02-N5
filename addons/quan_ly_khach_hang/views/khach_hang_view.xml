<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_khach_hang_form" model="ir.ui.view">
        <field name="name">khach_hang.form</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <form string="Khách Hàng">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_xem_co_hoi" type="object" class="oe_stat_button" icon="fa-handshake-o">
                            <div class="o_stat_info">
                                <field name="so_co_hoi" class="o_stat_value"/>
                                <span class="o_stat_text">Cơ Hội</span>
                            </div>
                        </button>
                        <button name="action_tao_tuong_tac" type="object" class="oe_stat_button" icon="fa-plus-circle">
                            <span class="o_stat_text">Ghi Nhận Tương Tác</span>
                        </button>
                    </div>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Không Hoạt Động" bg_color="bg-danger" 
                            attrs="{'invisible': [('nhom_khach_hang', '!=', 'khong_hoat_dong')]}"/>
                    <field name="anh_dai_dien" widget="image" class="oe_avatar" options="{'size': [128, 128]}"/>
                    <div class="oe_title">
                        <label for="ten_khach_hang"/>
                        <h1>
                            <field name="ten_khach_hang" placeholder="Tên Khách Hàng"/>
                        </h1>
                        <field name="ma_khach_hang" readonly="1"/>
                    </div>
                    
                    <group>
                        <group string="Thông Tin Cơ Bản">
                            <field name="loai_khach_hang" widget="radio" options="{'horizontal': true}"/>
                            <field name="ma_so_thue" attrs="{'invisible': [('loai_khach_hang', '=', 'ca_nhan')]}"/>
                            <field name="linh_vuc_kinh_doanh" attrs="{'invisible': [('loai_khach_hang', '=', 'ca_nhan')]}"/>
                            <field name="quy_mo" attrs="{'invisible': [('loai_khach_hang', '=', 'ca_nhan')]}"/>
                            <field name="website"/>
                        </group>
                        <group string="Phân Loại">
                            <field name="nhom_khach_hang" widget="badge"/>
                            <field name="nguon_khach_hang"/>
                            <field name="nhan_vien_phu_trach_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Liên Hệ">
                            <group>
                                <group>
                                    <field name="email"/>
                                    <field name="dien_thoai"/>
                                    <field name="fax"/>
                                </group>
                                <group>
                                    <field name="dia_chi"/>
                                    <field name="thanh_pho"/>
                                    <field name="quoc_gia_id"/>
                                </group>
                            </group>
                            <separator string="Người Liên Hệ"/>
                            <field name="lien_he_ids">
                                <tree editable="bottom">
                                    <field name="ho_ten"/>
                                    <field name="chuc_danh"/>
                                    <field name="email"/>
                                    <field name="dien_thoai"/>
                                    <field name="dien_thoai_di_dong"/>
                                    <field name="la_lien_he_chinh"/>
                                    <field name="muc_do_anh_huong" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Thông Tin Ngân Hàng">
                            <group>
                                <group>
                                    <field name="so_tai_khoan"/>
                                    <field name="ten_ngan_hang"/>
                                    <field name="chi_nhanh"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Cơ Hội Bán Hàng">
                            <field name="co_hoi_ids">
                                <tree decoration-success="giai_doan == 'thang'"
                                      decoration-danger="giai_doan == 'thua'"
                                      decoration-warning="giai_doan in ['dam_phan', 'bao_gia']">
                                    <field name="ma_co_hoi"/>
                                    <field name="ten_co_hoi"/>
                                    <field name="gia_tri_du_kien" widget="monetary"/>
                                    <field name="xac_suat" widget="progressbar"/>
                                    <field name="giai_doan" widget="badge"/>
                                    <field name="nhan_vien_phu_trach_id"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="tong_gia_tri_co_hoi" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        
                        <page string="Báo Giá">
                            <field name="bao_gia_ids">
                                <tree decoration-success="trang_thai == 'chap_nhan'"
                                      decoration-danger="trang_thai == 'tu_choi'"
                                      decoration-warning="trang_thai == 'dam_phan'">
                                    <field name="ma_bao_gia"/>
                                    <field name="ten_bao_gia"/>
                                    <field name="ngay_bao_gia"/>
                                    <field name="tong_thanh_toan" widget="monetary"/>
                                    <field name="trang_thai" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Lịch Hẹn">
                            <field name="lich_hen_ids">
                                <tree decoration-success="trang_thai == 'hoan_thanh'"
                                      decoration-danger="trang_thai == 'huy'"
                                      decoration-info="trang_thai == 'xac_nhan'">
                                    <field name="tieu_de"/>
                                    <field name="ngay_hen"/>
                                    <field name="loai_cuoc_hen"/>
                                    <field name="muc_dich"/>
                                    <field name="trang_thai" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Lịch Sử Tương Tác">
                            <field name="tuong_tac_ids">
                                <tree>
                                    <field name="ngay_tuong_tac"/>
                                    <field name="loai_tuong_tac" widget="badge"/>
                                    <field name="nhan_vien_id"/>
                                    <field name="ket_qua" widget="badge"/>
                                    <field name="mo_ta"/>
                                    <field name="cong_viec_id"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Ghi Chú">
                            <field name="ghi_chu" placeholder="Ghi chú về khách hàng..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_khach_hang_tree" model="ir.ui.view">
        <field name="name">khach_hang.tree</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Khách Hàng" decoration-muted="nhom_khach_hang == 'khong_hoat_dong'">
                <field name="ma_khach_hang"/>
                <field name="ten_khach_hang"/>
                <field name="loai_khach_hang" widget="badge"/>
                <field name="dien_thoai"/>
                <field name="email"/>
                <field name="thanh_pho"/>
                <field name="nhom_khach_hang" widget="badge"
                       decoration-success="nhom_khach_hang in ['than_thiet', 'vip']"
                       decoration-info="nhom_khach_hang == 'moi'"
                       decoration-warning="nhom_khach_hang == 'tiem_nang'"
                       decoration-danger="nhom_khach_hang == 'khong_hoat_dong'"/>
                <field name="nhan_vien_phu_trach_id"/>
                <field name="so_co_hoi"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_khach_hang_kanban" model="ir.ui.view">
        <field name="name">khach_hang.kanban</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="ten_khach_hang"/>
                <field name="anh_dai_dien"/>
                <field name="loai_khach_hang"/>
                <field name="nhom_khach_hang"/>
                <field name="dien_thoai"/>
                <field name="email"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <t t-if="record.anh_dai_dien.raw_value">
                                    <img t-att-src="kanban_image('khach_hang', 'anh_dai_dien', record.id.raw_value)" 
                                         alt="Logo" class="o_image_64_contain"/>
                                </t>
                                <t t-else="">
                                    <img src="/web/static/img/placeholder.png" alt="Logo" class="o_image_64_contain"/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="ten_khach_hang"/>
                                </strong>
                                <div>
                                    <field name="loai_khach_hang" widget="badge"/>
                                    <field name="nhom_khach_hang" widget="badge"/>
                                </div>
                                <div t-if="record.dien_thoai.value">
                                    <i class="fa fa-phone"/> <field name="dien_thoai"/>
                                </div>
                                <div t-if="record.email.value">
                                    <i class="fa fa-envelope"/> <field name="email"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_khach_hang_search" model="ir.ui.view">
        <field name="name">khach_hang.search</field>
        <field name="model">khach_hang</field>
        <field name="arch" type="xml">
            <search string="Tìm Kiếm Khách Hàng">
                <field name="ma_khach_hang"/>
                <field name="ten_khach_hang"/>
                <field name="email"/>
                <field name="dien_thoai"/>
                <field name="ma_so_thue"/>
                <separator/>
                <filter string="Doanh Nghiệp" name="filter_doanh_nghiep" domain="[('loai_khach_hang', '=', 'doanh_nghiep')]"/>
                <filter string="Cá Nhân" name="filter_ca_nhan" domain="[('loai_khach_hang', '=', 'ca_nhan')]"/>
                <separator/>
                <filter string="VIP" name="filter_vip" domain="[('nhom_khach_hang', '=', 'vip')]"/>
                <filter string="Thân Thiết" name="filter_than_thiet" domain="[('nhom_khach_hang', '=', 'than_thiet')]"/>
                <filter string="Tiềm Năng" name="filter_tiem_nang" domain="[('nhom_khach_hang', '=', 'tiem_nang')]"/>
                <separator/>
                <filter string="Hoạt Động" name="filter_active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhóm KH" name="group_nhom" context="{'group_by': 'nhom_khach_hang'}"/>
                    <filter string="Loại KH" name="group_loai" context="{'group_by': 'loai_khach_hang'}"/>
                    <filter string="NV Phụ Trách" name="group_nv" context="{'group_by': 'nhan_vien_phu_trach_id'}"/>
                    <filter string="Nguồn" name="group_nguon" context="{'group_by': 'nguon_khach_hang'}"/>
                </group>
                <searchpanel>
                    <field name="loai_khach_hang" icon="fa-building" enable_counters="1"/>
                    <field name="nhom_khach_hang" select="multi" icon="fa-star" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_khach_hang" model="ir.actions.act_window">
        <field name="name">Khách Hàng</field>
        <field name="res_model">khach_hang</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_khach_hang_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm khách hàng đầu tiên
            </p>
            <p>
                Quản lý thông tin khách hàng, cơ hội bán hàng và lịch sử tương tác.
            </p>
        </field>
    </record>
</odoo>
