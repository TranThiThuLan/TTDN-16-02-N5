<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View Nghỉ Phép -->
    <record id="view_nghi_phep_form" model="ir.ui.view">
        <field name="name">nghi_phep.form</field>
        <field name="model">nghi_phep</field>
        <field name="arch" type="xml">
            <form string="Đơn Xin Nghỉ Phép">
                <header>
                    <button name="action_gui_duyet" string="Gửi Duyệt" type="object" 
                            class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                    <button name="action_duyet" string="Duyệt" type="object" 
                            class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_tu_choi" string="Từ Chối" type="object" 
                            class="btn-danger" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_huy" string="Hủy Đơn" type="object" 
                            attrs="{'invisible': [('trang_thai', 'in', ['duyet', 'tu_choi', 'huy'])]}"/>
                    <button name="action_ve_nhap" string="Về Nháp" type="object" 
                            attrs="{'invisible': [('trang_thai', 'not in', ['tu_choi', 'huy'])]}"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,cho_duyet,duyet"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ma_don" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông Tin Nhân Viên">
                            <field name="nhan_vien_id" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="phong_ban_id"/>
                        </group>
                        <group string="Loại Nghỉ">
                            <field name="loai_nghi" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Thời Gian Nghỉ">
                            <field name="ngay_bat_dau" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="ngay_ket_thuc" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="so_ngay"/>
                        </group>
                        <group string="Thông Tin Duyệt">
                            <field name="nguoi_duyet_id" readonly="1"/>
                            <field name="ngay_duyet" readonly="1"/>
                            <field name="ngay_tao" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lý Do">
                            <field name="ly_do" placeholder="Nhập lý do xin nghỉ phép..." 
                                   attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                        </page>
                        <page string="Ghi Chú">
                            <field name="ghi_chu" placeholder="Ghi chú thêm..."/>
                            <field name="ly_do_tu_choi" placeholder="Lý do từ chối..." 
                                   attrs="{'invisible': [('trang_thai', '!=', 'tu_choi')]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View Nghỉ Phép -->
    <record id="view_nghi_phep_tree" model="ir.ui.view">
        <field name="name">nghi_phep.tree</field>
        <field name="model">nghi_phep</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Đơn Nghỉ Phép" decoration-success="trang_thai == 'duyet'"
                  decoration-warning="trang_thai == 'cho_duyet'"
                  decoration-danger="trang_thai == 'tu_choi'"
                  decoration-muted="trang_thai == 'huy'">
                <field name="ma_don"/>
                <field name="nhan_vien_id"/>
                <field name="phong_ban_id"/>
                <field name="loai_nghi"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
                <field name="so_ngay"/>
                <field name="trang_thai" widget="badge"
                       decoration-success="trang_thai == 'duyet'"
                       decoration-warning="trang_thai == 'cho_duyet'"
                       decoration-danger="trang_thai == 'tu_choi'"
                       decoration-info="trang_thai == 'nhap'"/>
            </tree>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_nghi_phep_calendar" model="ir.ui.view">
        <field name="name">nghi_phep.calendar</field>
        <field name="model">nghi_phep</field>
        <field name="arch" type="xml">
            <calendar string="Lịch Nghỉ Phép" date_start="ngay_bat_dau" date_stop="ngay_ket_thuc" color="nhan_vien_id" mode="month">
                <field name="nhan_vien_id"/>
                <field name="loai_nghi"/>
                <field name="trang_thai"/>
            </calendar>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_nghi_phep_search" model="ir.ui.view">
        <field name="name">nghi_phep.search</field>
        <field name="model">nghi_phep</field>
        <field name="arch" type="xml">
            <search string="Tìm Kiếm Đơn Nghỉ Phép">
                <field name="ma_don"/>
                <field name="nhan_vien_id"/>
                <field name="loai_nghi"/>
                <separator/>
                <filter string="Nháp" name="filter_nhap" domain="[('trang_thai', '=', 'nhap')]"/>
                <filter string="Chờ Duyệt" name="filter_cho_duyet" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                <filter string="Đã Duyệt" name="filter_duyet" domain="[('trang_thai', '=', 'duyet')]"/>
                <filter string="Từ Chối" name="filter_tu_choi" domain="[('trang_thai', '=', 'tu_choi')]"/>
                <separator/>
                <filter string="Nghỉ Phép Năm" name="filter_phep_nam" domain="[('loai_nghi', '=', 'nghi_phep_nam')]"/>
                <filter string="Nghỉ Ốm" name="filter_nghi_om" domain="[('loai_nghi', '=', 'nghi_om')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân Viên" name="group_nhan_vien" context="{'group_by': 'nhan_vien_id'}"/>
                    <filter string="Phòng Ban" name="group_phong_ban" context="{'group_by': 'phong_ban_id'}"/>
                    <filter string="Loại Nghỉ" name="group_loai" context="{'group_by': 'loai_nghi'}"/>
                    <filter string="Trạng Thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                    <filter string="Tháng" name="group_thang" context="{'group_by': 'ngay_bat_dau:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Nghỉ Phép -->
    <record id="action_nghi_phep" model="ir.actions.act_window">
        <field name="name">Đơn Nghỉ Phép</field>
        <field name="res_model">nghi_phep</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="search_view_id" ref="view_nghi_phep_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đơn xin nghỉ phép đầu tiên
            </p>
        </field>
    </record>

    <!-- Form View Phép Năm -->
    <record id="view_phep_nam_form" model="ir.ui.view">
        <field name="name">phep_nam.form</field>
        <field name="model">phep_nam</field>
        <field name="arch" type="xml">
            <form string="Phép Năm">
                <sheet>
                    <group>
                        <group>
                            <field name="nhan_vien_id"/>
                            <field name="nam"/>
                        </group>
                        <group>
                            <field name="so_ngay_duoc_phep"/>
                            <field name="so_ngay_chuyen_tu_nam_truoc"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="so_ngay_da_nghi"/>
                            <field name="so_ngay_con_lai"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View Phép Năm -->
    <record id="view_phep_nam_tree" model="ir.ui.view">
        <field name="name">phep_nam.tree</field>
        <field name="model">phep_nam</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Phép Năm" decoration-danger="so_ngay_con_lai &lt;= 0"
                  decoration-warning="so_ngay_con_lai &gt; 0 and so_ngay_con_lai &lt;= 3">
                <field name="nhan_vien_id"/>
                <field name="nam"/>
                <field name="so_ngay_duoc_phep"/>
                <field name="so_ngay_chuyen_tu_nam_truoc"/>
                <field name="so_ngay_da_nghi"/>
                <field name="so_ngay_con_lai"/>
            </tree>
        </field>
    </record>

    <!-- Action Phép Năm -->
    <record id="action_phep_nam" model="ir.actions.act_window">
        <field name="name">Phép Năm</field>
        <field name="res_model">phep_nam</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thiết lập phép năm cho nhân viên
            </p>
        </field>
    </record>
</odoo>
