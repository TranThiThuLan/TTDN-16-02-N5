<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_phong_ban_form" model="ir.ui.view">
        <field name="name">phong_ban.form</field>
        <field name="model">phong_ban</field>
        <field name="arch" type="xml">
            <form string="Phòng Ban">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="1">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Đã Lưu Trữ" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="ten_phong_ban" placeholder="Tên Phòng Ban"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông Tin Chung">
                            <field name="ma_phong_ban"/>
                            <field name="parent_id"/>
                            <field name="truong_phong_id"/>
                            <field name="thu_tu"/>
                        </group>
                        <group string="Liên Hệ">
                            <field name="email"/>
                            <field name="dien_thoai"/>
                            <field name="so_nhan_vien"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô Tả">
                            <field name="mo_ta" placeholder="Mô tả về phòng ban..."/>
                        </page>
                        <page string="Nhân Viên" attrs="{'invisible': [('so_nhan_vien', '=', 0)]}">
                            <field name="nhan_vien_ids">
                                <tree>
                                    <field name="ma_dinh_danh"/>
                                    <field name="ho_va_ten"/>
                                    <field name="chuc_vu_id"/>
                                    <field name="email"/>
                                    <field name="so_dien_thoai"/>
                                    <field name="trang_thai_lam_viec" widget="badge" 
                                           decoration-success="trang_thai_lam_viec == 'dang_lam'"
                                           decoration-info="trang_thai_lam_viec == 'thu_viec'"
                                           decoration-warning="trang_thai_lam_viec in ['nghi_phep', 'nghi_thai_san']"
                                           decoration-danger="trang_thai_lam_viec == 'da_nghi_viec'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Phòng Ban Con" attrs="{'invisible': [('child_ids', '=', [])]}">
                            <field name="child_ids">
                                <tree>
                                    <field name="ten_phong_ban"/>
                                    <field name="truong_phong_id"/>
                                    <field name="so_nhan_vien"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_phong_ban_tree" model="ir.ui.view">
        <field name="name">phong_ban.tree</field>
        <field name="model">phong_ban</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Phòng Ban">
                <field name="thu_tu" widget="handle"/>
                <field name="ma_phong_ban"/>
                <field name="ten_phong_ban"/>
                <field name="parent_id"/>
                <field name="truong_phong_id"/>
                <field name="so_nhan_vien"/>
                <field name="email"/>
                <field name="dien_thoai"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_phong_ban_kanban" model="ir.ui.view">
        <field name="name">phong_ban.kanban</field>
        <field name="model">phong_ban</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="ten_phong_ban"/>
                <field name="truong_phong_id"/>
                <field name="so_nhan_vien"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="ten_phong_ban"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <span t-if="record.truong_phong_id.value">
                                    <i class="fa fa-user"/> <field name="truong_phong_id"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill">
                                        <i class="fa fa-users"/> <field name="so_nhan_vien"/> nhân viên
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_phong_ban_search" model="ir.ui.view">
        <field name="name">phong_ban.search</field>
        <field name="model">phong_ban</field>
        <field name="arch" type="xml">
            <search string="Tìm Kiếm Phòng Ban">
                <field name="ten_phong_ban"/>
                <field name="ma_phong_ban"/>
                <field name="truong_phong_id"/>
                <filter string="Đang Hoạt Động" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Đã Lưu Trữ" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Phòng Ban Cha" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_phong_ban" model="ir.actions.act_window">
        <field name="name">Phòng Ban</field>
        <field name="res_model">phong_ban</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_phong_ban_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phòng ban đầu tiên
            </p>
            <p>
                Quản lý cấu trúc tổ chức của công ty theo phòng ban.
            </p>
        </field>
    </record>
</odoo>
